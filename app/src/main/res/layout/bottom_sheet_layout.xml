<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    android:padding="16dp">

    <!-- Nome do Produto -->
    <TextView
        android:id="@+id/nome_produto_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do Produto"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@android:color/black"
        android:paddingBottom="8dp" />

    <!-- Categoria do Produto -->
    <TextView
        android:id="@+id/categoria_produto_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categoria: "
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#8A8A8A"
        android:paddingBottom="8dp" />
    <TextView
        android:id="@+id/et_marca_produto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="marca:"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@android:color/black"
        android:paddingBottom="8dp" />
    <!-- Preço do Produto -->
    <TextView
        android:id="@+id/preco_produto_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Preço: R$ 0,00"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@android:color/black"
        android:paddingBottom="8dp" />

    <!-- Quantidade do Produto -->
    <TextView
        android:id="@+id/quantidade_produto_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantidade: 0"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@android:color/black"
        android:paddingBottom="8dp" />

    <!-- Validade do Produto -->
    <TextView
        android:id="@+id/validade_produto_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Validade: Não Informada"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@android:color/black"
        android:paddingBottom="8dp" />
    <!-- Validade do Produto -->
    <TextView
        android:id="@+id/et_descricao_produto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrição:"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@android:color/black"
        android:paddingBottom="16dp" />
    <!-- Botões de Entrada e Saída -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/entrada_button_popup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Entrada"
            android:backgroundTint="@color/green"
            android:textColor="@android:color/black"
            android:fontFamily="@font/poppins_medium"
            android:padding="12dp" />

        <Button
            android:id="@+id/saida_button_popup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Saída"
            android:backgroundTint="@color/red"
            android:textColor="@android:color/black"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginStart="8dp"
            android:padding="12dp" />
    </LinearLayout>

</LinearLayout>
