<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- CardView para design moderno com elevação -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="4dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white">

        <!-- ConstraintLayout para conteúdo flexível -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Nome do Produto -->
            <TextView
                android:id="@+id/nome_produto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nome_do_produto"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_regular"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Quantidade do Produto -->
            <TextView
                android:id="@+id/quantidade_produto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quantidade_0"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_regular"
                app:layout_constraintTop_toBottomOf="@id/nome_produto"
                app:layout_constraintStart_toStartOf="parent"
                />

            <!-- Preço do Produto -->
            <TextView
                android:id="@+id/preco_produto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pre_o_r_0_00"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_regular"
                app:layout_constraintTop_toBottomOf="@id/quantidade_produto"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Categoria do Produto -->
            <TextView
                android:id="@+id/categoria_produto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/categoria_sem_categoria"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_regular"
                app:layout_constraintTop_toBottomOf="@id/preco_produto"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Validade do Produto -->
            <TextView
                android:id="@+id/validade_produto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/validade_sem_validade"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_regular"
                app:layout_constraintTop_toBottomOf="@id/categoria_produto"
                app:layout_constraintStart_toStartOf="parent"
                />

            <!-- Botões de Entrada e Saída -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/validade_produto"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/entrada_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/entrada"
                    android:textColor="@android:color/white"
                    app:cornerRadius="16dp"
                    android:backgroundTint="@color/green" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/saida_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sa_da"
                    android:textColor="@android:color/white"
                    app:cornerRadius="16dp"
                    android:backgroundTint="@color/red"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
